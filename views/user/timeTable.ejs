              <tr id="no-results">
                <td colspan="6">일치하는 과목이 없습니다.</td>
              </tr>
              <% } else { %> <% courses.forEach(function(course) { %>
              <tr>
                <td><%= course.학수번호 %></td>
                <td><%= course.교과목명 %></td>
                <td><%= course.이수 %></td>
                <td><%= course.학점 %></td>
                <td><%= course.담당교수 %></td>
                <td><%= course.강의시간 %></td>
