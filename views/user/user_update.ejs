    </div>



    <h1>USER 정보 수정</h1>
    <form action="/user_manage/update_process/<%=pId%>" method="post">
      <p>
        <input
          type="text"
          name="loginid"
          style="width: 100px; border-color: antiquewhite"
          value="<%=loginid%>"
          placeholder="loginid"
        />
      </p>
      <p>
        <input
          name="password"
          placeholder="password"
          value="<%=password%>"
          style="width: 200px; height: 50px; border-color: antiquewhite"
        />
      </p>
      <p>
        <input
          name="name"
          placeholder="name"
          value="<%=name%>"
          style="width: 200px; height: 50px; border-color: antiquewhite"
        />
      </p>
      
      
      <input type="hidden" name = "class" value='a' >
  
      
      <p>by <%=id%></p>
      <p><input type="submit" /></p>
    </form>
  </form>
  
  
    


    
    <script src="/js/panel.js"></script>
    <script src="/js/banner.js"></script>
